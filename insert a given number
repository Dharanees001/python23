num = int(input("Enter the number of elements: "))

arr = []

print("Enter the elements:")
for i in range(num):
    element = int(input())
    arr.append(element)

print("Elements in the array:", arr)

insert_element_value = int(input("Enter the number to insert: "))
insert_position = int(input("Enter the position to insert: "))
arr.insert(insert_position - 1, insert_element_value)
print("After inserting the number:", arr)
delete_position = int(input("Enter the position to delete: "))
del arr[delete_position - 1]
print("After deleting the number:", arr)
